@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

@*I use the <style> tag instead of a css file to change the style of the .cshtml because of 
    an unknown issue with the out-of-the-box template*@
<style>
    body {
        background-color: #0084B4;
    }

    form {
        background-color: #ffffff;
        margin: auto;
        margin-top: 15%;
        margin-left: 25%;
        margin-right: 25%;
        border: 5px solid #0084B4;
        padding-top: 25px;
        padding-bottom: 25px;
        border-radius: 30px;
        border-top-right-radius: 0;
        border-bottom-left-radius: 0;
        box-sizing: border-box;
    }

    label {
        margin-right: 20px;
    }

    .inputs {
        padding: 25px;
        padding-right: 25px;
    }

    .input {
        border: 0px;
        background: #F3F3F3;
        border-bottom: 1px solid #000000;
        width: 100%;
        display: flex;
    }

    #title {
        background-color: #D9D9D9;
        color: #0084B4;
        width: 100%;
        font-style: normal;
        font-size: 24px;
        line-height: 33px;
        display: flex;
        align-items: center;
        padding-left: 20px;
    }

    #login-submit {
        left: 60px;
        align-items: center;
        text-align: center;
        border-radius: 35px;
    }

    #back-btn {
        background-color: #ffffff;
        text-align: center;
        text-decoration-line: underline;
        color: #0084B4;
        border: 0px;
        border-radius: 35px;
        text-align: center;
        border-radius: 35px;
        font-size: 20px;
    }
</style>

<script>
    function mouseOver() {
        document.getElementById("back-btn").style.color = "#ffffff";
        document.getElementById("back-btn").style.backgroundColor = "#0b5ed7";
    }

    function mouseOut() {
        document.getElementById("back-btn").style.color = "#0084B4";
        document.getElementById("back-btn").style.backgroundColor = "#ffffff";

    }
</script>


<section>
    <form id="account" method="post">
        <h2 id="title">Login</h2>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="inputs">
            <div class="form-group row">
                <label for="staticEmail" class="col-sm-2 col-form-label">Email:</label>
                <div class="form-floating col-sm-9">
                    <input asp-for="Input.Email" class="input " autocomplete="username" aria-required="true" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label for="inputPassword" class="col-sm-2 col-form-label">Password:</label>
                <div class="form-floating col-sm-9">
                    <input asp-for="Input.Password" class="input" autocomplete="current-password"
                        aria-required="true" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row ps-4 pe-4 ">
            <div class="gap-3 d-md-flex justify-content-md-end ps-4 pe-4">
                <a href="https://localhost:44430/" id="back-btn" class="btn btn-lg btn-primary pt-0 pb-0 h-75 "
                   onmouseover="mouseOver()" onmouseout="mouseOut()">Back</a>
                <button id="login-submit" type="submit" class="btn btn-lg btn-primary  pt-0 h-75">Login</button>
            </div>
        </div>
