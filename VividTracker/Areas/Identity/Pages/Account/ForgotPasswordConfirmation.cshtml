@page
@model ForgotPasswordConfirmation
@{
    ViewData["Title"] = "Forgot password confirmation";
}
<style>
    body {
        background-color: #0084B4;
    }

    form {
        background-color: #ffffff;
        border: 5px solid #0084B4;
        padding-top: 25px;
        padding-bottom: 25px;
        border-radius: 30px;
        border-top-right-radius: 0;
        border-bottom-left-radius: 0;
        box-sizing: border-box;
    }
    label {
        margin-right: 20px;
    }

    .inputs {
        padding: 25px;
        padding-right: 25px;
         font-size:18px;
    }

    .input {
        border: 0px;
        background: #F3F3F3;
        border-bottom: 1px solid #000000;
        width: 100%;
        display: flex;
    }

    #title {
        background-color: #D9D9D9;
        color: #0084B4;
        width: 100%;
        font-style: normal;
        font-size: 24px;
        line-height: 33px;
        display: flex;
        align-items: center;
        padding-left: 20px;
    }
     #Ok-submit {
        left: 60px;
        align-items: center;
        text-align: center;
        border-radius: 35px;
        background-color: #0084B4;
        height:80%;
        font-family: 'Open Sans'; 
        font-size:17px;
    }
    .Email{
        text-decoration:none;
    }
    input:invalid {
     border-bottom: 2px solid #F03C31;
    }
    input:focus{
       outline: none;
        border-bottom: 1px solid #F28627;
    }
</style>

<section>
    <div class="ps-lg-5 pe-lg-5">
    <div class="m-sm-5 ps-sm-5 pe-sm-5 pt-sm-1">
    <div class="m-md-5  ps-ms-5 pe-ms-5 pt-3">
    <form>
        <h2 id="title">Reset Password</h2>
         <div class="form-group row pe-3 ps-3 inputs">
                <p class="pe- ps-">
                    You can expect message on <a href="https://@Model.Input.Email" target="_blank" class= "Email">@Model.Input.Email</a> and proceed resetting the password from there.
                </p>
            </div>   
            <div class="row ps-4 pe-4">
            <div class="d-md-flex justify-content-md-end ps-4 pe-4 ">
                <a asp-page="./Login" id="Ok-submit" id="back-btn" class="btn btn-lg btn-primary  pt-0 pe-4 ps-4  ">Ok</a>
            </div> 
            </div>
    </form>
        
    </div>
    </div>
    </div>
</section>
