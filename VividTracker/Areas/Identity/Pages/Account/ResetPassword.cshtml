@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Reset password";
}

<style>
    body {
        background-color: #0084B4;
    }

    form {
        background-color: #ffffff;
        border: 5px solid #0084B4;
        padding-top: 25px;
        padding-bottom: 25px;
        border-radius: 30px;
        border-top-right-radius: 0;
        border-bottom-left-radius: 0;
        box-sizing: border-box;
        margin-right: 15%;
        margin-left: 15%;
        display:;
    }

    label {
        margin-right: 20px;
    }

    .inputs {
        padding: 25px;
        padding-right: 25px;
        font-size:18px;

    }

    .input {
        border: 0px;
        background: #F3F3F3;
        border-bottom: 1px solid #000000;
        width: 100%;
        display: flex;
    }

    #title {
        background-color: #D9D9D9;
        color: #0084B4;
        width: 100%;
        font-style: normal;
        font-size: 24px;
        line-height: 33px;
        display: flex;
        align-items: center;
        padding-left: 20px;
    }

    #Reset-submit {
        left: 60px;
        align-items: center;
        text-align: center;
        border-radius: 35px;
        background-color: #0084B4;
        height:80%;
        font-family: 'Open Sans'; 
        font-size:18px;
    }
    input:invalid {
     border-bottom: 2px solid #F03C31;
    }
    input:focus{
       outline: none;
        border-bottom: 1px solid #F28627;
    }
</style>

<section>
<div class="ps-lg-5 pe-lg-5">
    <div class="m-sm-5 ps-sm-5 pe-sm-5 pt-sm-1">
        <div class="m-md-5  ps-ms-5 pe-ms-5 pt-3">
            <form method="post">
                <h2 id="title">Reset password</h2>
                <div class="inputs ">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input asp-for="Input.Code" type="hidden" />
                    <div class="form-group row">
                        @*<label for="staticEmail"  class=" col-form-label">Email:</label>*@
                        <div class="form-floating col-sm">
                            <input asp-for="Input.Email" type="hidden" class="input pe-0 "  autocomplete="username"
                                aria-required="true" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="inputPassword" class=" col-form-label">Enter New password:</label>
                        <div class="form-floating col-sm">
                            <input asp-for="Input.Password" class="input pe-0" autocomplete="new-password"
                                aria-required="true" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="inputConfirmPassword" class=" col-form-label">Confirm New password:</label>
                        <div class="form-floating col-sm">
                            <input asp-for="Input.ConfirmPassword" class="input pe-0" autocomplete="new-password"
                                aria-required="true" />
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row ps-4 pe-4">
                        <div class="gap-3 d-md-flex justify-content-md-end ps-4 pe-4">
                            <button id="Reset-submit" type="submit"
                                class="btn btn-lg btn-primary  pt-0 pe-4 ps-4 ">Reset</button>
                        </div>
                    </div>

            </form>
        </div>
    </div>
</div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
